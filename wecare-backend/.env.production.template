# ============================================
# EMS WeCare - Production Environment
# ============================================
# Template for production-ready .env file
# 
# SECURITY NOTES:
# - Generate all secrets using: node scripts/validate-env.js --generate-secrets
# - NEVER commit this file with real secrets
# - Use secret management in cloud environments
# ============================================

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# ============================================
# SECURITY (REQUIRED - Replace with generated values)
# ============================================

# Generate with: openssl rand -base64 32
JWT_SECRET=REPLACE_WITH_GENERATED_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=24h

# Generate with: openssl rand -base64 32
SESSION_SECRET=REPLACE_WITH_GENERATED_SECRET_MIN_32_CHARS

# Data encryption key for sensitive patient data
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=REPLACE_WITH_64_CHAR_HEX_STRING

# ============================================
# CORS (REQUIRED - Your production domains)
# ============================================

# Comma-separated list of allowed origins
# Use HTTPS only, no wildcards, no localhost
ALLOWED_ORIGINS=https://wecare.example.com,https://app.wecare.example.com

# ============================================
# COOKIES & CSRF
# ============================================

# Must be true in production (requires HTTPS)
CSRF_COOKIE_SECURE=true
CSRF_COOKIE_SAME_SITE=strict

# ============================================
# DATABASE
# ============================================

# SQLite database path (relative to backend root)
DATABASE_PATH=./db/wecare.db
DB_PATH=/app/db/wecare.db

# ============================================
# LOGGING
# ============================================

# Log level: error | warn | info | debug
# Use 'warn' or 'error' in production
LOG_LEVEL=warn

# Log prefix for identifying service
LOG_PREFIX=[WeCare]

# Include timestamps in logs
LOG_TIMESTAMPS=true

# File logging
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log

# ============================================
# RATE LIMITING
# ============================================

# Window duration in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Max requests per window per IP
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# BACKUP CONFIGURATION
# ============================================

# Enable automatic backups
BACKUP_ENABLED=true

# Backup interval in milliseconds (24 hours)
BACKUP_INTERVAL=86400000

# Number of backups to retain
BACKUP_RETENTION=7

# ============================================
# FILE UPLOADS
# ============================================

# Upload directory
UPLOAD_DIR=./uploads

# Max file size in bytes (5MB)
MAX_FILE_SIZE=5242880

# Allowed MIME types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================

# Google Maps API (for location services)
# GOOGLE_MAPS_API_KEY=

# Sentry for error tracking
# SENTRY_DSN=

# ============================================
# SMTP EMAIL (Optional)
# ============================================

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER=
# SMTP_PASS=
# EMAIL_FROM=noreply@wecare.example.com
